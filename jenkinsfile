pipeline {
    agent any

    environment {
        VENV = "venv"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/SultanUmarCheema/Flask-Lab07.git'
            }
        }

        stage('Setup Python') {
            steps {
                // Create virtual environment and install dependencies
                sh """
                python -m venv ${VENV}
                . ${VENV}/Scripts/activate
                pip install --upgrade pip
                pip install -r requirements.txt
                """
            }
        }

        stage('Run App') {
            steps {
                // Run the Flask app in background
                sh """
                . ${VENV}/Scripts/activate
                nohup python app.py &
                sleep 10
                """
            }
        }

        stage('Smoke Test') {
            steps {
                // Simple check that app responds
                sh """
                curl -f http://127.0.0.1:5000 || exit 1
                """
            }
        }
    }

    post {
        success {
            echo 'Pipeline succeeded!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
